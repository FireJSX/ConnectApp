<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefonnummer" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-Mail" />

    <EditText
        android:id="@+id/input_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse" />

    <CheckBox
        android:id="@+id/check_share_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefonnummer teilen" />

    <CheckBox
        android:id="@+id/check_share_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail teilen" />

    <CheckBox
        android:id="@+id/check_share_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse teilen" />
</LinearLayout>
